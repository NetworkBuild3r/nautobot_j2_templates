hostname {{ obj.name }}

{% set snmp = obj.config_context.cisco_snmp_ios.monitoring_config.snmp %}
! SNMP Configuration
snmp-server community {{ snmp.community_ro }} RO {{ snmp.community_ro_timeout }}
snmp-server community {{ snmp.community_rw }} RW {{ snmp.community_rw_timeout }}
snmp-server trap-source {{ snmp.trap_source }}
snmp-server location "{{ obj.location.name if snmp.use_device_location else snmp.location | default('') }}"
snmp-server contact "{{ snmp.contact }}"

{# SNMP Traps #}
{% for trap in snmp.enable_traps %}
snmp-server enable traps {{ trap }}
{% endfor %}

{# SNMP Hosts #}
{% for host in snmp.hosts %}
snmp-server host {{ host.ip }} {{ host.secret_key }}
{% endfor %}